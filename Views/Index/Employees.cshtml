@model PogoInsurance.Models.EmployeeModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0">
    <title>Pogo Insurance</title>
    <link href="~/Content/stylesheet.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <script src="https://kit.fontawesome.com/fbb15fc2fb.js" crossorigin="anonymous"></script>
</head>
<body>

    <!--Header start from Here-->
    <header><a href=""><img src="~/images/logo.png" alt="" /></a></header>
    <!--Header End Here-->
    <!--Body start from Here-->
    <div class="mainCont">
        <div class="container">
            @using (Html.BeginForm("Employees", "Index", FormMethod.Post))
            {
                <div class="backbtn"><a href="@Url.Action("OwnersDetail", "Index")"><i class="fa-solid fa-left-long"></i> Back</a></div>
                <h1 class="m-10">Employees</h1>
                <h4 class="m-50">List all of the types of work your employees perform, including things like clerical work or outside sales. Please do not include owners. </h4>

                <h2 class="m-20">Employee group 1</h2>
                <div class="businessStructure m-30">
                    <h3 class="m-10">Type of work</h3>
                    <div class="form-group m-50">
                        <div class="srchOuter">
                            @Html.TextBoxFor(m => m.TypeofWork, new { @class = "frmInp" })
                            <button type="button" name="button" class="srchIcon"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </div>
                </div>
                <div class="businessStructure m-50">
                    <h3 class="m-10">Description of duties</h3>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Duties, new { @class = "txtareaInp", placeholder = "What does this group of employees do on a daily basis?" })

                    </div>
                </div>
                <div class="businessStructure m-50">
                    <h3 class="m-10">Location</h3>
                    <div class="itemselect">
                        @Html.DropDownListFor(M => M.Location, new SelectList(Model.LocationLists, "LocationId", "LocationName"), new { @class = "listmenu" })

                        <i class="fa-solid fa-angle-down"></i>
                    </div>
                </div>

                <div class="businessStructure">
                    <h3 class="m-20">
                        Full-time employees
                        <i class="tooltip">
                            ?
                            <span class="left">How many full-time employees perform this type of work for your business?</span>
                        </i>
                    </h3>
                    <div class="numberOwners">
                        <a class="btn-decrease" data-decrease>-</a>
                        @Html.TextBoxFor(m => m.FullTimeEmployee, new { value = @Model.FullTimeEmployee })
                        <a class="btn-increase" data-increase>+</a>
                    </div>
                </div>

                <div class="businessStructure">
                    <h3 class="m-20">
                        Part-time employees
                        <i class="tooltip">
                            ?
                            <span class="left">How many part-time employees perform this type of work for your business?</span>
                        </i>
                    </h3>
                    <div class="numberOwners">
                        <a class="btn-decrease" data-decrease>-</a>
                        @Html.TextBoxFor(m => m.PartTimeEmployee, new { value = @Model.PartTimeEmployee })
                        <a class="btn-increase" data-increase>+</a>
                    </div>
                </div>
                <div class="businessStructure m-50">
                    <h3 class="m-10">
                        Employee payroll
                        <i class="tooltip">
                            ?
                            <span class="left">Enter the total salary amount you think youï¿½ll pay these employees over the next 12 months.</span>
                        </i>
                    </h3>
                    <div class="dollarFld m-10">
                        @Html.TextBoxFor(m => m.EmployeePayroll, new { @class = "frmInp" })
                        <i class="fa-solid fa-dollar-sign"></i>
                    </div>
                    <div class="anotherwork">
                        <a href="">+ Add Another Type of Work </a>
                        <i class="tooltip">
                            ?
                            <span class="right">Make sure you add all the types of work your employees perform for the business, including clerical work or outside sales.</span>
                        </i>
                    </div>
                </div>
                <div class="businessStructure m-50">
                    <h3 class="m-20">Any additional job types? </h3>
                    @for (var i = 0; i < Model.JobType.Count(); i++)
                    {
                        <div class="checkboxBx m-10">
                            <label>
                                @Html.CheckBoxFor(M => M.JobType[i].ChkAnswer)
                                <span class="checkmark"></span>
                                @Model.JobType[i].DataTitle
                            </label>
                            @Html.HiddenFor(m => m.JobType[i].DataTitle)
                            @Html.HiddenFor(m => m.JobType[i].DataId)
                            @Html.HiddenFor(m => m.JobType[i].ChkAnswer)
                        </div>

                    }

                </div>

                <div class="button-grpup">
                    <button class="nextBtn" type="submit">Next <i class="fa-solid fa-right-long"></i></button>
                    @*<a href="additional-workers.html" class="nextBtn">Next <i class="fa-solid fa-right-long"></i></a>*@
                </div>
            }
        </div>
    </div>
    <!--Body End Here-->
    <!--Footer start from Here-->
    <footer>
        Copyright 2022 / <a href="">Privacy</a> / <a href="">Terms</a>
    </footer>
    <!--Footer End Here-->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <script src="~/Scripts/function.js" crossorigin="anonymous"></script>

</body>

</html>