@model PogoInsurance.Models.InsuranceHistoryModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0">
    <title>Pogo Insurance</title>
    <link href="~/Content/stylesheet.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <script src="https://kit.fontawesome.com/fbb15fc2fb.js" crossorigin="anonymous"></script>
</head>
<body>

    <!--Header start from Here-->
    <header><a href=""><img src="~/images/logo.png" alt="" /></a></header>
    <!--Header End Here-->
    <!--Body start from Here-->
    <div class="mainCont">
        <div class="container">
            @using (Html.BeginForm("InsuranceHistory", "Index", FormMethod.Post))
            {
                <div class="backbtn"><a href="@Url.Action("Operations", "Index")"><i class="fa-solid fa-left-long"></i> Back</a></div>
                <h1 class="m-50">Insurance & Tax History</h1>
                <div class="businessStructure m-50">
                    <h3 class="m-20">Does your business have a health insurance plan in effect?</h3>
                    <div class="yesnoBxOuter m-20">
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsHelthInsurance", "Yes", false, new { Id = "HelthInsurance1" })
                                <label for="HelthInsurance1">Yes</label>
                                <div class="check"></div>
                            </div>
                        </div>
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsHelthInsurance", "No", false, new { Id = "HelthInsurance2" })
                                <label for="HelthInsurance2">No</label>
                                <div class="check"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="businessStructure m-50">
                    <h3 class="m-20">Do you have a workers' comp policy currently in effect?</h3>
                    <div class="yesnoBxOuter m-20">
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsWorkersPolicy", "Yes", false, new { Id = "WorkersPolicy1" })
                                <label for="WorkersPolicy1">Yes</label>
                                <div class="check"></div>
                            </div>
                        </div>
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsWorkersPolicy", "No", false, new { Id = "WorkersPolicy2" })
                                <label for="WorkersPolicy2">No</label>
                                <div class="check"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="businessStructure m-50">
                    <h3 class="m-20">Have there been any undisputed or unpaid workers' comp payments due from you or any commonly managed or owned companies?</h3>
                    <div class="yesnoBxOuter m-20">
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsUndisputedOrUnpaid", "Yes", false, new { Id = "UndisputedOrUnpaid1" })
                                <label for="UndisputedOrUnpaid1">Yes</label>
                                <div class="check"></div>
                            </div>
                        </div>
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsUndisputedOrUnpaid", "No", false, new { Id = "UndisputedOrUnpaid2" })
                                <label for="UndisputedOrUnpaid2">No</label>
                                <div class="check"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="businessStructure m-50">
                    <h3 class="m-20">Any workers' comp insurance declined, cancelled, or non-renewed in the last three years?</h3>
                    <div class="yesnoBxOuter m-20">
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsWorkersInsuranceDeclined", "Yes", false, new { Id = "radio" })
                                <label for="radio">Yes</label>
                                <div class="check"></div>
                            </div>
                        </div>
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsWorkersInsuranceDeclined", "No", false, new { Id = "radio1" })
                                <label for="radio1">No</label>
                                <div class="check"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="businessStructure m-50">
                    <h3 class="m-20">Any tax liens or bankruptcy within the last five years?</h3>
                    <div class="yesnoBxOuter m-20">
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsBankruptcy", "Yes", false, new { Id = "radio2" })
                                <label for="radio2">Yes</label>
                                <div class="check"></div>
                            </div>
                        </div>
                        <div class="half">
                            <div class="yesnoBx">
                                @Html.RadioButton("IsBankruptcy", "No", false, new { Id = "radio3" })
                                <label for="radio3">No</label>
                                <div class="check"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="button-grpup">
                    <button class="nextBtn" type="submit">Next <i class="fa-solid fa-right-long"></i></button>
                </div>
            }
        </div>
    </div>
    <!--Body End Here-->
    <!--Footer start from Here-->
    <footer>
        Copyright 2022 / <a href="">Privacy</a> / <a href="">Terms</a>
    </footer>
    <!--Footer End Here-->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>

</body>

</html>