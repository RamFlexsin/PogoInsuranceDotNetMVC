    <script type="text/javascript">
        $(document).on("click", "#customerButton", function () {

            var OwnerDetail = [];
            var rowidx = parseInt($("#hdnRows").val());
            for (var i = 1; i <= rowidx; i++) {

                var OwnerModel = {
                    "FirstName": $('#FirstName' + i + '').val(),
                    "LastName": $('#LastName' + i + '').val(),
                    "Phone": $('#Phone' + i + '').val(),
                    "Email": $('#Email' + i + '').val(),
                    "TypeOfWork": $('#TypeOfWork' + i + '').val(),
                    "Location": $('#ddlLocation' + i + '').val(),
                    "Title": $('#ddlTitle' + i + '').val(),
                    "OwnerPayroll": $('#OwnerPayroll' + i + '').val(),
                    "DateOfBirth": $('#DateOfBirth' + i + '').val(),
                    "LocationId": $('#ddlLocation' + i + '').val(),
                    "TitleId": $('#ddlTitle' + i + '').val(),

                };
                OwnerDetail.push(OwnerModel);
            }

            var ownerDetailModel = {
                "PartnershipPercent": $('#PartnershipPercent').val(),
                "OwnerDetails": OwnerDetail,
                "LocationLists": null
            };

            var urlprefix = "";
            if (!window.location.origin.includes("localhost")) {
                urlprefix = window.location.origin;
            }

            debugger;
            $.ajax({
                type: "POST",
                url: urlprefix + "/Index/OwnersDetail",
                dataType: 'json',
                data: ownerDetailModel, //JSON.stringify(ownerDetailModel),
                success: function (res) {
                    if (res) {
                        window.location.href = urlprefix + "/Index/Employees";
                    } else {
                        console.log(res);
                        alert('console: ' + res);
                    }

                },
                error: function (xhr) {
                    console.log(xhr);
                    alert('error: ' + xhr.responseText);

                }
            });

        });
