        //        $(newel).insertAfter(".addownerOuter:last");
        //    });
        //});



    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            debugger;
            var rowidx = parseInt($("#hdnRows").val());
            if (rowidx == 1) {
                $("#addownerOuter1").show();
                $("#addownerOuter2").hide();
                $("#addownerOuter3").hide();
            }
        });

        $(document).on("click", ".addanotherBtn", function () {
            debugger;
            var rowidx = parseInt($("#hdnRows").val()) + 1;
            if (rowidx == 2) {
                $("#addownerOuter1").show();
                $("#addownerOuter2").show();
                $("#addownerOuter3").hide();
                $("#hdnRows").val(rowidx);
            }
            if (rowidx == 3) {
                $("#addownerOuter1").show();
                $("#addownerOuter2").show();
                $("#addownerOuter3").show();
                $("#hdnRows").val(rowidx);
            }
            if (rowidx == 3) {
                $('.addanotherBtn').hide();
            }
        });
    </script>

